<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MemeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryVariant">@color/background_light</item>
        <item name="colorOnPrimary">@color/background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/background_light</item>
        <item name="elevation">0dp</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="statusBarForeground">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/black</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>




    </style>
</resources>